{% extends 'base.html.twig' %}

{% block title %}Modifier la prestation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier la prestation</h1>

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            {{ form_widget(form) }}
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_prestation_show', {'id': prestation.id}) }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}